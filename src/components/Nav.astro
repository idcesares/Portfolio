---
import Icon from './Icon.astro';
import ThemeToggle from './ThemeToggle.astro';
import SearchBox from './SearchBox.astro';

/** Main menu items */
const textLinks: { label: string; href: string; prefetch?: 'load' | 'hover' | 'viewport' }[] = [
	{ label: 'Home', href: '/', prefetch: 'load' },
	{ label: 'Trabalhos', href: '/work/', prefetch: 'load' },
	{ label: 'Blog', href: '/blog/', prefetch: 'load' },
	{ label: 'Sobre', href: '/about/' }];
---

<nav transition:name="nav" transition:animate="none">
	<div class="nav-shell">
		<div class="menu-header">
			<a href="/" class="site-title" aria-label="Isaac D'CÃ©sares">
				<Icon icon="terminal-window" color="var(--accent-regular)" size="1.5em" gradient />
			</a>
			<div class="nav-actions">
				<button class="search-toggle" id="search-toggle" type="button" aria-label="Open search">
					<Icon icon="magnifying-glass" />
				</button>
				<menu-button>
					<template>
						<button class="menu-button" aria-expanded="false">
							<span class="sr-only">Menu</span>
							<Icon icon="list" />
						</button>
					</template>
				</menu-button>
			</div>
		</div>
		<noscript>
		<ul class="nav-items">
				{
					textLinks.map(({ label, href, prefetch }) => (
						<li>
							<a
								aria-current={Astro.url.pathname === href}
								class:list={[
									'link',
									{
										active:
											Astro.url.pathname === href ||
											(href !== '/' && Astro.url.pathname.startsWith(href)),
									},
								]}
								href={href}
								data-astro-prefetch={prefetch}
							>
								{label}
							</a>
						</li>
					))
				}
			</ul>
		</noscript>

		<div id="menu-content" hidden>
			<ul class="nav-items">
				{
					textLinks.map(({ label, href, prefetch }) => (
						<li>
							<a
								aria-current={Astro.url.pathname === href}
								class:list={[
									'link',
									{
										active:
											Astro.url.pathname === href ||
											(href !== '/' && Astro.url.pathname.startsWith(href)),
									},
								]}
								href={href}
								data-astro-prefetch={prefetch}
							>
								{label}
							</a>
						</li>
					))
				}
			</ul>
			<div class="menu-footer">
				<button class="search-toggle desktop-search-btn" id="search-toggle-desktop" type="button" aria-label="Open search">
					<Icon icon="magnifying-glass" />
				</button>

				<div class="theme-toggle">
					<ThemeToggle />
				</div>
			</div>
		</div>
	</div>
	<div class="search-overlay" id="search-overlay" hidden>
		<div class="search-overlay-content">
			<div class="search-modal-header">
				<h2>Busca</h2>
				<button class="search-close" id="search-close" type="button" aria-label="Close search">
					<Icon icon="arrow-left" />
				</button>
			</div>
			<SearchBox placeholder="Pesquise posts e projetos..." />
		</div>
	</div>
</nav>

<script>
	class MenuButton extends HTMLElement {
		constructor() {
			super();

			// Inject menu toggle button when JS runs.
			this.appendChild(this.querySelector('template')!.content.cloneNode(true));
			const btn = this.querySelector('button')!;

			// Hide menu (shown by default to support no-JS browsers).
			const menu = document.getElementById('menu-content')!;
			menu.hidden = true;
			// Add "menu-content" class in JS to avoid covering content in non-JS browsers.
			menu.classList.add('menu-content');

			/** Set whether the menu is currently expanded or collapsed. */
			const setExpanded = (expand: boolean) => {
				btn.setAttribute('aria-expanded', expand ? 'true' : 'false');
				menu.hidden = !expand;
			};

			// Toggle menu visibility when the menu button is clicked.
			btn.addEventListener('click', () => setExpanded(menu.hidden));

			// Hide menu button for large screens.
			const handleViewports = (e: MediaQueryList | MediaQueryListEvent) => {
				setExpanded(e.matches);
				btn.hidden = e.matches;
			};
			const mediaQueries = window.matchMedia('(min-width: 50em)');
			handleViewports(mediaQueries);
			mediaQueries.addEventListener('change', handleViewports);
		}
	}
	customElements.define('menu-button', MenuButton);

	// Search overlay functionality
	class SearchToggle {
		constructor() {
			this.init();
		}

		init() {
			const searchToggle = document.getElementById('search-toggle');
			const searchToggleDesktop = document.getElementById('search-toggle-desktop');
			const searchOverlay = document.getElementById('search-overlay');
			const searchClose = document.getElementById('search-close');
			const searchInput = document.getElementById('search-input');

			if (!searchOverlay || !searchClose) return;

			const openSearch = () => {
				searchOverlay.hidden = false;
				// Focus the input after a small delay to ensure the modal is rendered
				setTimeout(() => {
					searchInput?.focus();
				}, 100);
			};

			const closeSearch = () => {
				searchOverlay.hidden = true;
			};

			// Mobile search toggle
			if (searchToggle) {
				searchToggle.addEventListener('click', openSearch);
			}

			// Desktop search toggle
			if (searchToggleDesktop) {
				searchToggleDesktop.addEventListener('click', openSearch);
			}

			// Close search overlay
			searchClose.addEventListener('click', closeSearch);

			// Close on escape key
			document.addEventListener('keydown', (e) => {
				if (e.key === 'Escape' && !searchOverlay.hidden) {
					closeSearch();
				}
			});

			// Close on overlay background click
			searchOverlay.addEventListener('click', (e) => {
				if (e.target === searchOverlay) {
					closeSearch();
				}
			});
		}
	}

	// Initialize components
	function initNav() {
		new SearchToggle();

		const nav = document.querySelector('nav');
		if (!nav) return;

		let ticking = false;
		const updateNavState = () => {
			const scrolled = window.scrollY > 12;
			nav.setAttribute('data-scrolled', scrolled ? 'true' : 'false');
			ticking = false;
		};

		updateNavState();
		window.addEventListener('scroll', () => {
			if (!ticking) {
				window.requestAnimationFrame(updateNavState);
				ticking = true;
			}
		});
	}

	// Initialize on DOM load
	document.addEventListener('DOMContentLoaded', initNav);
	
	// Re-initialize after view transitions
	document.addEventListener('astro:page-load', initNav);
</script>

<style>
	nav {
		z-index: 9999;
		position: sticky;
		top: 0;
		padding: 1.25rem 1.5rem 0;
		font-family: var(--font-body);
		font-weight: 500;
		margin-bottom: 3rem;
		display: flex;
		justify-content: center;
	}

	.nav-shell {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 0.75rem 1rem;
		border-radius: var(--radius-xl);
		border: 1px solid var(--gray-800);
		background: color-mix(in oklab, var(--gray-999) 80%, transparent);
		backdrop-filter: blur(14px);
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--theme-transition), background-color var(--theme-transition);
		position: relative;
		overflow: hidden;
		width: min(90rem, calc(100% - 3rem));
	}

	.nav-shell::after {
		content: '';
		position: absolute;
		left: 12%;
		right: 12%;
		bottom: 0;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent,
			color-mix(in oklab, var(--accent-regular) 55%, transparent),
			transparent
		);
		opacity: 0.45;
	}

	nav[data-scrolled='true'] .nav-shell {
		background: color-mix(in oklab, var(--gray-999) 92%, transparent);
		box-shadow: var(--shadow-md);
		border-color: color-mix(in oklab, var(--gray-800) 70%, transparent);
	}

	.menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 0.5rem;
		padding: 0.25rem 0.25rem 0;
	}

	.nav-actions {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.search-toggle {
		position: relative;
		display: flex;
		border: 0;
		border-radius: 999rem;
		padding: 0.45rem;
		font-size: 1.05rem;
		color: var(--gray-300);
		background: color-mix(in oklab, var(--gray-999) 72%, transparent);
		border: 1px solid color-mix(in oklab, var(--gray-700) 60%, transparent);
		box-shadow: none;
		cursor: pointer;
		transition: color var(--theme-transition);
	}

	.search-toggle:hover {
		color: var(--gray-0);
	}

	.desktop-search-btn {
		display: none; /* Hidden on mobile */
	}

	.search-overlay {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(18, 14, 12, 0.65);
		backdrop-filter: blur(8px);
		z-index: 10000;
		display: flex;
		align-items: flex-start;
		justify-content: center;
		padding: 2rem 1rem;
		opacity: 1;
		transition: opacity 0.2s ease;
	}

	.search-overlay[hidden] {
		display: none;
		opacity: 0;
	}

	.search-overlay-content {
		width: 100%;
		max-width: 600px;
		margin-top: 4rem;
		background: var(--gray-999);
		border-radius: var(--radius-lg);
		padding: 1.5rem;
		box-shadow: var(--shadow-lg);
		border: 1px solid var(--gray-800);
		transform: translateY(0);
		transition: transform 0.2s ease;
	}

	.search-modal-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1.5rem;
	}

	.search-modal-header h2 {
		margin: 0;
		font-size: var(--text-xl);
		font-weight: 600;
		color: var(--gray-0);
	}

	.search-close {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		background: none;
		border: 1px solid var(--gray-800);
		border-radius: 0.5rem;
		color: var(--gray-300);
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.search-close:hover {
		background: var(--gray-800);
		color: var(--gray-0);
		border-color: var(--gray-700);
	}



	.site-title {
		display: flex;
		gap: 0.5rem;
		align-items: center;
		line-height: 1.1;
		color: var(--gray-0);
		text-decoration: none;
		font-family: var(--font-brand);
		font-weight: 600;
		font-size: var(--text-md);
	}

	.menu-button {
		position: relative;
		display: flex;
		border: 0;
		border-radius: 999rem;
		padding: 0.5rem;
		font-size: 1.3rem;
		color: var(--gray-300);
		background: color-mix(in oklab, var(--gray-999) 72%, transparent);
		border: 1px solid color-mix(in oklab, var(--gray-700) 60%, transparent);
		box-shadow: none;
	}

	.menu-button[aria-expanded='true'] {
		color: var(--gray-0);
		background: var(--gradient-accent);
	}

	.menu-button[hidden] {
		display: none;
	}

	.menu-content {
		position: relative;
	}

	.nav-items {
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		font-size: var(--text-md);
		line-height: 1.2;
		letter-spacing: 0.01em;
		list-style: none;
		padding: 1rem 0;
		background-color: transparent;
		border: 0;
		align-items: center;
		width: 100%;
	}

	.link {
		display: inline-block;
		color: var(--gray-300);
		text-decoration: none;
		position: relative;
		padding: 0.35rem 0;
		transition: color var(--theme-transition);
	}

	.link::after {
		content: '';
		position: absolute;
		left: 0;
		bottom: -0.2rem;
		width: 0%;
		height: 2px;
		background: var(--accent-regular);
		transition: width 0.2s ease;
	}

	.link:hover::after,
	.link:focus::after {
		width: 100%;
	}

	.link.active {
		color: var(--gray-0);
	}

	.link.active::after {
		width: 100%;
	}

	.menu-footer {
		--icon-size: var(--text-xl);
		--icon-padding: 0.5rem;

		display: flex;
		justify-content: space-between;
		gap: 0.75rem;
		padding: 0 0 0.75rem;
		background-color: transparent;
		border-radius: 0;
		border: 0;
		box-shadow: none;
	}

	.theme-toggle {
		display: flex;
		align-items: center;
		height: calc(var(--icon-size) + 2 * var(--icon-padding));
	}

	@media (min-width: 50em) {
		nav {
			padding: 1.75rem 4rem 0;
		}

		.nav-shell {
			display: grid;
			grid-template-columns: auto 1fr auto;
			align-items: center;
			gap: 2rem;
			padding: 0.75rem 1.5rem;
			width: min(88rem, calc(100% - 4rem));
		}

		.menu-header {
			padding: 0;
			grid-column: 1;
			display: flex;
			justify-content: flex-start;
			align-items: center;
		}

		.nav-actions {
			display: none; /* Hide on desktop, search will be in menu-footer */
		}

		.search-overlay-content {
			margin-top: 6rem;
			max-width: 700px;
		}

		.search-toggle {
			font-size: 1rem;
			padding: 0.45rem;
		}

		.menu-footer .search-toggle {
			display: flex; /* Show search in menu-footer on desktop */
		}

		.desktop-search-btn {
			display: flex; /* Show desktop search button */
		}

		.site-title {
			font-size: var(--text-lg);
		}

		.menu-content {
			display: flex;
			grid-column: 2;
			justify-content: center;
		}

		.nav-items {
			flex-direction: row;
			font-size: var(--text-base);
			gap: 1.75rem;
			padding: 0;
			justify-content: center;
			width: 100%;
		}

		.link {
			padding: 0.35rem 0;
			transition:
				color var(--theme-transition),
				background-color var(--theme-transition);
		}

		.link:hover,
		.link:focus {
			color: var(--gray-100);
		}

		.link.active {
			color: var(--accent-regular);
		}

		.menu-footer {
			--icon-padding: 0.375rem;

			grid-column: 3;
			justify-self: flex-end;
			align-items: center;
			padding: 0;
			background-color: transparent;
			box-shadow: none;
			display: flex;
			gap: 0.75rem;
		}
	}
	@media (forced-colors: active) {
		.link.active {
			color: SelectedItem;
		}
	}

	/* Light theme adjustments */
	:global([data-theme="light"]) .search-overlay-content {
		background: var(--gray-0);
		border: 1px solid var(--gray-300);
	}

	:global([data-theme="light"]) .search-modal-header h2 {
		color: var(--gray-800);
	}

	:global([data-theme="light"]) .search-close {
		border-color: var(--gray-300);
		color: var(--gray-600);
	}

	:global([data-theme="light"]) .search-close:hover {
		background: var(--gray-100);
		color: var(--gray-800);
		border-color: var(--gray-400);
	}
</style>
