---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';

const currentYear = new Date().getFullYear();

const socialLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'LinkedIn', href: 'https://linkedin.com/in/isaacdcesares', icon: 'linkedin-logo' },
	{ label: 'Twitter', href: 'https://twitter.com/idcesares', icon: 'twitter-logo' },
	{ label: 'GitHub', href: 'https://github.com/idcesares', icon: 'github-logo' },
	{ label: 'YouTube', href: 'https://www.youtube.com/@idcesares/', icon: 'youtube-logo' },
];
---

<footer>
	<div class="group">
		<p>
			Desenvolvido por <a href="https://github.com/idcesares">@idcesares</a> usando <a href="https://astro.build/">Astro</a>
			<Icon icon="rocket-launch" size="1.2em" />
		</p>
		<p>&copy; {currentYear} Isaac D'CÃ©sares</p>
	</div>
	<div class="footer-links">
		<a href="/deals" class="text-link">Ofertas</a>
		<div class="socials">
			{
				socialLinks.map(({ href, icon, label }) => (
					<a href={href} target="_blank" class="social" aria-label={label}>
						<Icon icon={icon} />
					</a>
				))
			}
		</div>
	</div>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		margin-top: auto;
		padding: 3rem 2rem 3rem;
		text-align: center;
		color: var(--gray-400);
		font-size: var(--text-sm);
		border-top: 1px solid var(--gray-800);
		background: color-mix(in oklab, var(--gray-999) 90%, transparent);
		backdrop-filter: blur(8px);
	}

	footer a {
		color: var(--gray-400);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	footer a:hover,
	footer a:focus {
		text-decoration-color: currentColor;
	}

	.group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-links {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.text-link {
		color: var(--gray-400);
	}

	.socials {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.social {
		display: flex;
		padding: 0.375rem;
		font-size: var(--text-lg);
		color: var(--gray-400);
		transition: color var(--theme-transition);
	}

	.social:hover,
	.social:focus {
		color: var(--accent-regular);
	}

	@media (min-width: 50em) {
		footer {
			flex-direction: row;
			justify-content: space-between;
			padding: 2.5rem 5rem;
		}

		.group {
			flex-direction: row;
			gap: 1rem;
			flex-wrap: wrap;
		}

		.footer-links {
			flex-direction: row;
			align-items: center;
			gap: 1.5rem;
		}

		.socials {
			justify-content: flex-end;
			gap: 0.5rem;
		}
	}
</style>
